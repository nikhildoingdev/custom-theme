<h2>Products</h2>

{%  assign products = collections['hydrogen'].products %}

{% for product in products %}
  <li>
    {% unless section.settings.hide_soldout and product.available == false %}
      <a style="color: {{ settings.link_color }};" href="{{ product.url }}">
        {{ product.title }} - {{ product.price }}
      </a>
    {% endunless %}
  </li>
{% endfor %}

{% schema %}
{
  "name": "Products",
  "settings": [
    {
      "type": "checkbox",
      "id": "hide_soldout",
      "label": "Hide Sold Out Products",
      "default": true
    }
    ]
}
{% endschema %}